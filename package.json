{
  "name": "dyson-swarm",
  "version": "1.0.0",
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "start": "vite preview",
    "validate": "svelte-check --tsconfig ./tsconfig.json --use-new-transformation",
    "test": "jest src",
    "test:watch": "npm run test -- --watch"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^1.0.2",
    "@testing-library/jest-dom": "^5.16.4",
    "@tsconfig/svelte": "^3.0.0",
    "@types/css-font-loading-module": "0.0.7",
    "@types/jest": "^27.5.0",
    "augmented-ui": "^2.0.0",
    "autoprefixer": "^10.4.8",
    "babel-jest": "^28.1.0",
    "jest": "^28.1.0",
    "jssm": "^5.53.0",
    "postcss": "^8.4.16",
    "prettier": "^2.8.1",
    "prettier-plugin-svelte": "^2.9.0",
    "svelte": "^3.50.0",
    "svelte-check": "^2.7.0",
    "svelte-jester": "^2.3.2",
    "svelte-preprocess": "^4.10.7",
    "tailwindcss": "^3.1.8",
    "ts-jest": "^28.0.2",
    "tslib": "^2.1.0",
    "typescript": "^4.8.2",
    "vite": "^3.0.9"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.ts$": "ts-jest",
      "^.+\\.svelte$": [
        "svelte-jester",
        {
          "preprocess": true
        }
      ]
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "svelte"
